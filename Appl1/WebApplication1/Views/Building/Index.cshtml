@model WebApplication1.Models.City
@{
    ViewBag.Title = "Index";
}
<body style="background-image:url(../Content/img/city.jpg);">
    <h2>Index</h2>


<table>
    <tr>
        <th>Type</th>
        <th>Level</th>
        <th>Action</th>
    </tr>
    @foreach (var building in Model.Buildings)
    {
        <tr>
            @{
                if (building.BuildingType != null)
                {

                    <td>@building.BuildingType.Name</td>
                    <td>@building.Level</td>
                    //<td>@Html.ActionLink("Details", "Details", new { buildingId = building.BuildingId })</td>
                    <td style="cursor:pointer" class="building-details-btn" data-building-id="@(building.BuildingId)">Details</td>
                }
                else
                {
                    <td>Nothing</td>
                    <td>0</td>
                    <td>@Html.ActionLink("Build", "Build", new {buildingId = building.BuildingId})</td>
    
                }
            }
        </tr>
    }

</table>
    
<div id="buildings-container">
    <div class="close-btn">X</div>
    <div class="content"></div>
</div>
    
